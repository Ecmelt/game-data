{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/_types"],

    "target": "es2015",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "build/",
    "rootDir": "src/",

    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
